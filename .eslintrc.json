{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "overrides": [
        {
            "files": ["**/tests/*.spec.js"],
            "rules": {
                "require-jsdoc": "off",
                "no-undef": "off",
                "no-shadow": "off"
            }
        }
    ],
    "rules": {
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-underscore-dangle": "off",
        "default-case": "off"
    }
}